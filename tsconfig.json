{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true
  },
  "include": [
    "server/**/*",
    "client/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "typeRoots": [ "node_modules/@types" ],
  "paths": {
    "*": [
      "node_modules/@types/*"
    ]
  }
}
